<div class="container">
  <div class="col-md-12">
    <h1 class="text-center">Personal Cocktail Codex Builder</h1>
  </div>
  <div class="col-sm-12 d-flex justify-content-center">
    <img src="/assets/image.png" alt="" class="img" id="userAvatar">
  </div>
  <div class="col-lg-12 d-flex justify-content-center">
    <form action="/auth/signup" method="POST">
      <div class="col-md-12 justify-content-center">
        <p class="text-center">Name</p>
        <input id="new-name" type="text" name="name" placeholder="" class="text-center">
      </div>
      <div class="col-md-12 justify-content-center">
        <p class="text-center registerEmail">Email</p>
        <input id="new-email" type="email" name="email" placeholder="" class="text-center">
      </div>
      <div class="col-md-12 justify-content-center">
        <p class="text-center registerPassword">Password</p>
        <input id="new-password" type="password" name="password" placeholder="" class="text-center">
      </div>
      <div class="row justify-content-center mt-4">
        <input type="submit" value="Register">
      </div>
    </form>
  </div>
</div>