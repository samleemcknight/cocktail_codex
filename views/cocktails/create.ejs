<div class="container"> 
    <h1 class="text-center">Add your own Cocktail%> </h1>
    <div class="d-flex justify-content-center d-flex justify-content-center">
        <div class="col-md-5 text-center">
        <form action="/cocktails/create" method="POST">
            <div class="form-group">
                <label for="name">Cocktail Name:</label>
                <input class="form-control" type="text" name="name" required>
            </div>
            <div class="form-group">
                <label for="primaryAlcohol">Primary Alcohol:</label>
                <input class="form-control" type="text" name="primaryAlcohol" required>
            </div>
            <div class="form-group">
                <label for="recipe">Recipe:</label>
                <textarea class="form-control" type="textarea" placeholder="shots, shots, shots" name="recipe" required></textarea>
            </div>
            <div class="form-group">
                <label for="recipe">Photo Url <span class="italics">(optional)</span>:</label>
                <input class="form-control" type="text" name="url">
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
        </div>
    </div>
</div>