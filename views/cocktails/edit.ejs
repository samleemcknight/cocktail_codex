<div class="container"> 
    <h1 class="text-center">Edit <%= cocktail.name %> </h1>
    <div class="d-flex justify-content-center d-flex justify-content-center">
        <div class="col-md-5 text-center">
            <% if (cocktail.url) {%>
                <img src="<%= cocktail.url %>" alt="<%= cocktail.name %>" class="img-fluid cocktail-img img-thumbnail">
            <% }%>
        <form action="/cocktails/myFavorites/<%= cocktail.id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="name">Cocktail Name:</label>
                <input class="form-control" type="text" name="name" value="<%= cocktail.name %>" required>
            </div>
            <div class="form-group">
                <label for="primaryAlcohol">Primary Alcohol:</label>
                <input class="form-control" type="text" name="primaryAlcohol" value="<%= cocktail.primaryAlcohol %>" required>
            </div>
            <div class="form-group">
                <label for="recipe">Recipe:</label>
                <textarea class="form-control" type="textarea" name="recipe" required><%= cocktail.recipe %></textarea>
            </div>
            <div class="form-group">
                <label for="recipe">Photo Url <span class="italics">(optional)</span>:</label>
                <input class="form-control" type="text" name="url" value="<%= cocktail.url %>">
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
        </div>
    </div>
</div>